<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="container-fluid">
        <h2>My Profile</h2>
        <div class="row">
            <div class="col-sm-5">
                <br />
                <form action="/users/get" method="get">
                    <div class="form-group">
                        <label class="firstname" for="firstname">First Name:
                            <input type="text" class="form-control" id="firstname" name="firstname"
                                placeholder={{firstname}}></label>
                    </div>

                    <div class="form-group">
                        <label class="lastname" for="lastname">Last Name:
                            <input type="text" class="form-control" id="lastname" name="lastname"
                                placeholder={{lastname}}></label>
                    </div>

                    <div class="form-group">
                        <label class="username" for="username">UserName:
                            <input type="text" class="form-control" id="username" name="username"
                                placeholder={{username}}></label>
                    </div>

                    <div class="form-group">
                        <label class="age" for="age">Age:
                            <input type="number" class="form-control" id="age" name="age" placeholder={{age}}></label>
                    </div>

                    <div class="form-group">
                        <label class="gender" for="gender">Gender:
                            <input type="text" class="form-control" id="gender" name="gender" placeholder={{gender}}>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="dob" for="dob">Date of Birth:
                            <input type="number" class="form-control" id="dob" name="dob" placeholder={{dob}}></label>
                    </div>
                    <div class="form-group">
                        <label class="email" for="email">Email address:
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder={{email}}></label>
                    </div>

                    <div class="form-group">
                        <label class="contact" for="contact">Contact Number:
                            <input type="number" class="form-control" id="contact" name="contact"
                                placeholder={{contact}}> </label>
                    </div>

                    <div class="form-group">
                        <label class="emergency" for="emergency">Emergency Contact Number:
                            <input type="emergency" class="form-control" id="emergency" name="emergency"
                                placeholder={{emergency}}></label>
                    </div>

                </form>
            </div>
            <div class="col-sm-6"> My Activities
                <div class="row">
                    <div class="col-sm-6">Activities
                        <div class="row">
                            <div class="column">Hiking</div>
                           
                        </div>
                    </div>

                    <div class="col-sm-6">Date
                        <div class="row">
                            <div class="column">08/03/2020</div>
                           
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>