<div class="container">
	<h2>{{this.actName}}</h2>
	<br>

	<input type="text" id="searchEvent" onkeyup="myFunction()" placeholder="Filter for events">
	<br>

	<table id="eventTable" style="width:100%">
		<tr class="header">
			<th>Location</th>
			<th>City</th>
			<th>State</th>
			<th>Date (YYYY-MM-DD)</th>
			<th>Organizer</th>
			<th>Expertise level</th>
			<th>Price($)</th>
		</tr>

		{{#each activityTable}}
		<tr>
			<div class='activityTable'></div>
			<td><a href="/event/{{urlEncode this.id}}">{{this.location}}</a></td>
			<td>{{this.city}} </td>
			<td>{{this.state}} </td>
			<td>{{this.date}} </td>
			<td>{{this.organizer}} </td>
			<td>{{this.expertise}} </td>
			<td>{{this.price}} </td>
</div>
</tr>
{{/each}}

</table>

