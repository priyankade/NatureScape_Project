<div class="container">
  <h2 class="uppercase">{{this.activityName}}</h2>
  <br>

  {{!-- <input type="text" id="searchEvent" onkeyup="myFunction()" placeholder="Filter for events">
  <br> --}}

  {{!-- <b>Search the table for events:
    <input id="gfg" type="text" placeholder="Search here">
  </b> --}}

  <table id="eventTable" style="width:100%">
    <tr class="header">
      <th>Location</th>
      <th>City</th>
      <th>State</th>
      <th>Date (YYYY-MM-DD)</th>
      <th>Organizer</th>
      <th>Expertise level</th>
      <th>Price($)</th>
    </tr>

    {{#each activityTable}}
    <tr>
      <div class='activityTable'></div>
      <td><a href="`/{{{this.activityName}}}`/{{{this.location}}}">{{{this.location}}}</a></td>
      <td>{{this.city}} </td>
      <td>{{this.state}} </td>
      <td>{{this.date}} </td>
      <td>{{this.organizer}} </td>
      <td>{{this.expertise}} </td>
      <td>{{this.price}} </td>
</div>
</tr>
{{/each}}

</table>

<br>

<form class="addEvent" action="/events/addEvent">
  <input type="submit" id="addEvent" name="addEvent" value="Add Event">
</form>

